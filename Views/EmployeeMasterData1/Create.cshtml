@model Accura_Innovatives.EmployeeViewModel

@{
    ViewData["Title"] = "Create";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>

        html, body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background: url('../Image/Welding.jpg') center/cover no-repeat fixed;
            height: 100%;
        }

        .heads {
            text-decoration: underline;
            font-size: 15px;
        }

        body {
            display: flex;
            align-items: center;
            min-height: 100vh;
            text-align: left;
        }

        .menu-item {
            display: inline-block;
            padding: 2px;
            border: 1px solid #ccc;
            margin: 5px;
        }

        #profile-image {
            max-width: 20%;
            height: auto;
            margin-bottom: 16px;
            display: none; /* Initially hide the image */
        }

        .tab:active {
            background-color: deepskyblue;
        }

        #selectedList {
            list-style-type: none;
            padding: 0;
        }

        .deleteButton {
            cursor: pointer;
            color: blue;
            margin-left: 10px;
        }

        form {
            display: flex;
            flex-direction: column;
            align-items: center;
            top: 65px;
            left: 12.5%;
            background-color: rgba(255, 255, 255, 0.8);
            position: absolute;
            box-sizing: border-box;
            border: 1px solid #ccc;
            width: 80%;
        }

        label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
        }

        input, select, textarea {
            width: 100%;
            padding: 8px;
            margin-bottom: 16px;
            box-sizing: border-box;
        }

        /* Optional: Add some styling to improve readability */
        label {
            display: block;
            margin-bottom: 8px;
        }

        input, select, textarea {
            width: 100%;
            padding: 8px;
            margin-bottom: 16px;
            box-sizing: border-box;
        }

        /* Style for the tabs */
        .tabs {
            padding-top: 2px;
            padding-bottom: 2px;
            display: flex;
            justify-content: center;
            /* margin-bottom: 14px; */
            text-align: center;
            height: 30px;
        }

        .tab {
            padding-top: 2px;
            padding-bottom: 2px;
            cursor: pointer;
            border: 1px solid lightblue;
            border-radius: 4px;
            margin: 0 4px;
            background-color: lightblue;
            font-size: 12px;
            text-align: center;
        }

        /* Hide all tab content by default */
        .tab-content {
            display: none;
            font-size: 14px;
            padding: 5px;
            /* text-align: center; */
        }

        .centered-text {
            text-align: center; /* Center-align text */
            font-size: 14px;
        }
        /* Show the selected tab content */
        .tab-content.active {
            display: block;
        }

        .certificatesDocsVerifiedConditional-fields, .aadharCardVerifiedConditional-fields, .salConditional-fields, .conditional-fields, .addPreviousCompany0Conditional-fields, .addPreviousCompany1Conditional-fields, .addPreviousCompany2Conditional-fields, .addPreviousCompany3Conditional-fields {
            display: none;
        }

        .formXIEligibilityConditional-fields, .acknowledgementGivenConditional-fields, .eligibilityForAssetConditional-fields, .salaryOrWagesConditional-fields {
            display: none;
        }

        .reassignSameEmpIdConditional-fields, .otherAttachment4Conditional-fields, .otherAttachment3Conditional-fields, .otherAttachment2Conditional-fields, .otherAttachment1Conditional-fields {
            display: none;
        }

        .addServiceBreak1Conditional-fields, .addServiceBreak2Conditional-fields, .addServiceBreak3Conditional-fields, .attachLeaveReleavedConditional-fields, .otherCertificates1Conditional-fields, .otherCertificates2Conditional-fields, .attachCertificate4Conditional-fields, .attachCertificate3Conditional-fields, .attachCertificate2Conditional-fields, .attachCertificate1Conditional-fields {
            display: none;
        }

        .HRM-Container {
            top: 65px;
            left: 12.5%;
            background-color: rgba(255, 255, 255, 0.8);
            position: absolute;
            box-sizing: border-box;
            text-size-adjust: 12px;
            border: 1px solid #ccc;
            width: 80%;
        }

        h1, h4 {
            text-shadow: 2px 2px 3px black;
        }
    </style>
    <title>Employee Details Form</title>
</head>
<body>

    <form class=" HRM-Container" asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h1>Create</h1>

        <div class="tabs centered-text">
            <div class="tab" onclick="showTab('tab1')">Personal Details</div>
            <div class="tab" onclick="showTab('tab2')">Family Details</div>
            <div class="tab" onclick="showTab('tab3')">Education Details</div>
            <div class="tab" onclick="showTab('tab4')">Pre.Professional Details</div>
            <div class="tab" onclick="showTab('tab5')">New Joinee Details</div>
            <div class="tab" onclick="showTab('tab6')">Verification</div>


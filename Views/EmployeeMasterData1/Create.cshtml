                        // If image file
                        var img = document.createElement('img');
                        img.src = e.target.result;
                        img.style.width = '200px';
                        preview.appendChild(img);
                    } else {
                        // Unsupported file type
                        preview.textContent = 'Unsupported file type';
                    }
                }
            };

            reader.readAsDataURL(input.files[0]);
        });


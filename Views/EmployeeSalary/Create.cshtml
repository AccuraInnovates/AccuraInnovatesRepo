@model Accura_Innovatives.Models.SalaryCalculation

@{
    ViewData["Title"] = "Create";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
<style>

    html, body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        background: url('../Image/Welding.jpg') center/cover no-repeat fixed;
        height: 100%;
    }

    body {
        display: flex;
        align-items: center;
        min-height: 100vh;
        text-align: left;
    }

    form {
        display: flex;
        flex-direction: column;
        align-items: center;
        top: 65px;
        left: 12.5%;
        background-color: rgba(255, 255, 255, 0.8);
        position: absolute;
        box-sizing: border-box;
        border: 1px solid #ccc;
        width: 80%;
    }

    /* Optional: Add some styling to improve readability */
    label {
        display: block;
        margin-bottom: 8px;
    }

    input, select, textarea {
        width: 100%;
        padding: 8px;
        margin-bottom: 16px;
        box-sizing: border-box;
    }


    .centered-text {
        text-align: center; /* Center-align text */
        font-size: 14px;
    }

   
    .HRM-Container {
        top: 65px;
        left: 12.5%;
        background-color: rgba(255, 255, 255, 0.8);
        position: absolute;
        box-sizing: border-box;
        text-size-adjust: 12px;
        border: 1px solid #ccc;
        width: 80%;
    }
</style>
<title>Employee Details Form</title>
</head>
<body>

    <form class=" HRM-Container" asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
<h1>Create</h1>
<div class="row">
    <div class="col-4">
                <div class="form-group">
                    <label asp-for="EmpCode" class="control-label">Employee Code* :</label>
                    <input asp-for="EmpCode" class="form-control" required />
                </div>
    </div>
            <div class="col-4">
                <div class="form-group">
                    <label asp-for="BasicPay" class="control-label">Basic Pay* :</label>
                    <input asp-for="BasicPay" class="form-control" required />
                </div>
            </div>
            <div class="col-4">
                <div class="form-group">
                    <label asp-for="OtherAllowances" class="control-label">Other Allowances* :</label>
                    <input asp-for="OtherAllowances" class="form-control" required />
                </div>
            </div>
</div>
        <div class="form-group text-center">
            <a style="width:100px; padding-top:2px; padding-bottom:2px; margin:10px;" class="btn btn-sm btn-primary m1-1" asp-action="Index">Back to List</a>
            <button type="submit" style="width:100px;height:auto; padding-top:2px; padding-bottom:2px margin:10px"  class="btn btn-primary" > Create </button>
            <button type="reset" style="width:100px;height:auto; padding-top:2px; padding-bottom:2px; margin:10px " class="btn btn-primary">Clear All</button>
        </div>
    </form>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>